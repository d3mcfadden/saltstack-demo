upstream app-upstream {
{% for server in backends -%}
server {{ server }}:5000;
{% endfor -%}
}

server {
	listen 80;
	server_name _;

	location / {
		proxy_connect_timeout 1s;
		proxy_buffering off;
		proxy_set_header Host $http_host;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_pass http://app-upstream;
	}
}
